{{- if eq (getenv "GITEA_U2F_ENABLED") "true" | conv.Bool }}
[U2F]
APP_ID = {{ getenv "GITEA_U2F_APP_ID" }}
TRUSTED_FACETS = {{ getenv "GITEA_U2F_TRUSTED_FACETS" }}

{{- end }}
[highlight.mapping]
{{- range split (getenv "GITEA_HIGHLIGHT_MAPPING") "," }}
{{ . }}
{{- end }}

[other]
SHOW_FOOTER_BRANDING = {{ getenv "GITEA_OTHER_SHOW_FOOTER_BRANDING" "false" | conv.Bool }}
SHOW_FOOTER_VERSION = {{ getenv "GITEA_OTHER_SHOW_FOOTER_VERSION" "false" | conv.Bool }}
SHOW_FOOTER_TEMPLATE_LOAD_TIME = {{ getenv "GITEA_OTHER_SHOW_FOOTER_TEMPLATE_LOAD_TIME" "false" | conv.Bool }}

[markup.asciidoc]
ENABLED = {{ getenv "GITEA_MARKUP_ASCIIDOC_ENABLED" "true" | conv.Bool }}
FILE_EXTENSIONS = {{ getenv "GITEA_MARKUP_ASCIIDOC_FILE_EXTENSIONS" ".adoc,.asciidoc" }}
RENDER_COMMAND = `{{ getenv "GITEA_MARKUP_ASCIIDOC_RENDER_COMMAND" "asciidoc --out-file=- -" }}`
IS_INPUT_FILE = {{ getenv "GITEA_MARKUP_ASCIIDOC_IS_INPUT_FILE" "false" | conv.Bool }}

[metrics]
ENABLED = {{ getenv "GITEA_METRICS_ENABLED" "false" | conv.Bool }}
TOKEN = {{ getenv "GITEA_METRICS_TOKEN" }}

[task]
QUEUE_TYPE = {{ getenv "GITEA_TASK_QUEUE_TYPE" "channel" }}
QUEUE_LENGTH = {{ getenv "GITEA_TASK_QUEUE_LENGTH" "1000" }}
{{- if "GITEA_TASK_QUEUE_CONN_STR" }}
QUEUE_CONN_STR = "{{ getenv "GITEA_TASK_QUEUE_CONN_STR" }}"
{{- end }}
